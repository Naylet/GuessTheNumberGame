<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TopResultsActivity">

    <TextView
            android:text="@string/top_10"
            android:layout_width="0dp"
            android:layout_height="353dp"
            android:id="@+id/resultBoard" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="26dp" android:layout_marginEnd="34dp"
            android:layout_marginRight="35dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="453dp" android:layout_marginEnd="81dp" android:layout_marginRight="81dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:visibility="invisible"/>
    <Button
            android:text="@string/powrot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="240dp" android:layout_marginStart="240dp" android:onClick="returnToMain"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:layout_width="182dp"
            android:layout_height="351dp"
            android:id="@+id/listView" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="195dp"
            android:layout_marginStart="195dp" android:layout_marginEnd="34dp" android:layout_marginRight="34dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>